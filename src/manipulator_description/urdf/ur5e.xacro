<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ur5e_arm">

  <!-- ============================= UR5e MANIPULATOR ARM ============================= -->
  <!-- This file wraps the UR5e URDF and updates mesh paths to use package:// format -->

  <xacro:macro name="ur5e_robot" params="parent prefix:='' *origin">
    
    <!-- Base Link Connection -->
    <joint name="${prefix}base_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <parent link="${parent}"/>
      <child link="${prefix}base_link"/>
    </joint>

    <!-- UR5e Links -->
    <link name="${prefix}base_link"/>
    
    <link name="${prefix}base_link_inertia">
      <visual>
        <origin rpy="0 0 3.14159265359" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/visual/base.obj"/>
        </geometry>
        <material name="ur_silver"/>
      </visual>
      <collision>
        <origin rpy="0 0 3.14159265359" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/collision/base.obj"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="4.0"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx="0.00443333156" ixy="0.0" ixz="0.0" iyy="0.00443333156" iyz="0.0" izz="0.0072"/>
      </inertial>
    </link>

    <link name="${prefix}shoulder_link">
      <visual>
        <origin rpy="0 0 3.14159265359" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/visual/shoulder.obj"/>
        </geometry>
        <material name="ur_blue"/>
      </visual>
      <collision>
        <origin rpy="0 0 3.14159265359" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/collision/shoulder.obj"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="3.7"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx="0.010267495893" ixy="0.0" ixz="0.0" iyy="0.010267495893" iyz="0.0" izz="0.00666"/>
      </inertial>
    </link>

    <link name="${prefix}upper_arm_link">
      <visual>
        <origin rpy="1.57079632679 0 -1.57079632679" xyz="0 0 0.138"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/visual/upperarm.obj"/>
        </geometry>
        <material name="ur_silver"/>
      </visual>
      <collision>
        <origin rpy="1.57079632679 0 -1.57079632679" xyz="0 0 0.138"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/collision/upperarm.obj"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="8.393"/>
        <origin rpy="0 1.57079632679 0" xyz="-0.2125 0.0 0.138"/>
        <inertia ixx="0.133885781862" ixy="0.0" ixz="0.0" iyy="0.133885781862" iyz="0.0" izz="0.0151074"/>
      </inertial>
    </link>

    <link name="${prefix}forearm_link">
      <visual>
        <origin rpy="1.57079632679 0 -1.57079632679" xyz="0 0 0.007"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/visual/forearm.obj"/>
        </geometry>
        <material name="ur_silver"/>
      </visual>
      <collision>
        <origin rpy="1.57079632679 0 -1.57079632679" xyz="0 0 0.007"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/collision/forearm.obj"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="2.275"/>
        <origin rpy="0 1.57079632679 0" xyz="-0.1961 0.0 0.007"/>
        <inertia ixx="0.0312093550996" ixy="0.0" ixz="0.0" iyy="0.0312093550996" iyz="0.0" izz="0.004095"/>
      </inertial>
    </link>

    <link name="${prefix}wrist_1_link">
      <visual>
        <origin rpy="1.57079632679 0 0" xyz="0 0 -0.127"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/visual/wrist1.obj"/>
        </geometry>
        <material name="ur_black"/>
      </visual>
      <collision>
        <origin rpy="1.57079632679 0 0" xyz="0 0 -0.127"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/collision/wrist1.obj"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.219"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx="0.00255989897604" ixy="0.0" ixz="0.0" iyy="0.00255989897604" iyz="0.0" izz="0.0021942"/>
      </inertial>
    </link>

    <link name="${prefix}wrist_2_link">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 -0.0997"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/visual/wrist2.obj"/>
        </geometry>
        <material name="ur_black"/>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 -0.0997"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/collision/wrist2.obj"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.219"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx="0.00255989897604" ixy="0.0" ixz="0.0" iyy="0.00255989897604" iyz="0.0" izz="0.0021942"/>
      </inertial>
    </link>

    <link name="${prefix}wrist_3_link">
      <visual>
        <origin rpy="1.57079632679 0 0" xyz="0 0 -0.0989"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/visual/wrist3.obj"/>
        </geometry>
        <material name="ur_black"/>
      </visual>
      <collision>
        <origin rpy="1.57079632679 0 0" xyz="0 0 -0.0989"/>
        <geometry>
          <mesh filename="package://manipulator_description/meshes/arm/collision/wrist3.obj"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1879"/>
        <origin rpy="0 0 0" xyz="0.0 0.0 -0.0229"/>
        <inertia ixx="9.89041005217e-05" ixy="0.0" ixz="0.0" iyy="9.89041005217e-05" iyz="0.0" izz="0.0001321171875"/>
      </inertial>
    </link>

    <!-- UR5e Joints -->
    <joint name="${prefix}base_link-base_link_inertia" type="fixed">
      <parent link="${prefix}base_link"/>
      <child link="${prefix}base_link_inertia"/>
      <origin rpy="0 0 3.14159265359" xyz="0 0 0"/>
    </joint>

    <joint name="${prefix}shoulder_pan_joint" type="revolute">
      <parent link="${prefix}base_link_inertia"/>
      <child link="${prefix}shoulder_link"/>
      <origin rpy="0 0 0" xyz="0 0 0.1625"/>
      <axis xyz="0 0 1"/>
      <limit effort="150.0" lower="-6.28318530718" upper="6.28318530718" velocity="3.14159265359"/>
      <dynamics damping="0" friction="0"/>
    </joint>

    <joint name="${prefix}shoulder_lift_joint" type="revolute">
      <parent link="${prefix}shoulder_link"/>
      <child link="${prefix}upper_arm_link"/>
      <origin rpy="1.570796327 0 0" xyz="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit effort="150.0" lower="-6.28318530718" upper="6.28318530718" velocity="3.14159265359"/>
      <dynamics damping="0" friction="0"/>
    </joint>

    <joint name="${prefix}elbow_joint" type="revolute">
      <parent link="${prefix}upper_arm_link"/>
      <child link="${prefix}forearm_link"/>
      <origin rpy="0 0 0" xyz="-0.425 0 0"/>
      <axis xyz="0 0 1"/>
      <limit effort="150.0" lower="-3.14159265359" upper="3.14159265359" velocity="3.14159265359"/>
      <dynamics damping="0" friction="0"/>
    </joint>

    <joint name="${prefix}wrist_1_joint" type="revolute">
      <parent link="${prefix}forearm_link"/>
      <child link="${prefix}wrist_1_link"/>
      <origin rpy="0 0 0" xyz="-0.3922 0 0.1333"/>
      <axis xyz="0 0 1"/>
      <limit effort="28.0" lower="-6.28318530718" upper="6.28318530718" velocity="3.14159265359"/>
      <dynamics damping="0" friction="0"/>
    </joint>

    <joint name="${prefix}wrist_2_joint" type="revolute">
      <parent link="${prefix}wrist_1_link"/>
      <child link="${prefix}wrist_2_link"/>
      <origin rpy="1.570796327 0 0" xyz="0 -0.0997 -2.0448811823e-11"/>
      <axis xyz="0 0 1"/>
      <limit effort="28.0" lower="-6.28318530718" upper="6.28318530718" velocity="3.14159265359"/>
      <dynamics damping="0" friction="0"/>
    </joint>

    <joint name="${prefix}wrist_3_joint" type="revolute">
      <parent link="${prefix}wrist_2_link"/>
      <child link="${prefix}wrist_3_link"/>
      <origin rpy="1.57079632659 3.14159265359 3.14159265359" xyz="0 0.0996 -2.04283014801e-11"/>
      <axis xyz="0 0 1"/>
      <limit effort="28.0" lower="-6.28318530718" upper="6.28318530718" velocity="3.14159265359"/>
      <dynamics damping="0" friction="0"/>
    </joint>

    <!-- End effector link -->
    <link name="${prefix}ee_link"/>
    <joint name="${prefix}wrist_3-flange" type="fixed">
      <parent link="${prefix}wrist_3_link"/>
      <child link="${prefix}ee_link"/>
      <origin rpy="0 -1.57079632679 -1.57079632679" xyz="0 0 0"/>
    </joint>

    <!-- Gazebo materials -->
    <gazebo reference="${prefix}base_link_inertia">
      <material>Gazebo/FlatBlack</material>
    </gazebo>
    <gazebo reference="${prefix}shoulder_link">
      <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="${prefix}upper_arm_link">
      <material>Gazebo/FlatBlack</material>
    </gazebo>
    <gazebo reference="${prefix}forearm_link">
      <material>Gazebo/FlatBlack</material>
    </gazebo>
    <gazebo reference="${prefix}wrist_1_link">
      <material>Gazebo/FlatBlack</material>
    </gazebo>
    <gazebo reference="${prefix}wrist_2_link">
      <material>Gazebo/FlatBlack</material>
    </gazebo>
    <gazebo reference="${prefix}wrist_3_link">
      <material>Gazebo/FlatBlack</material>
    </gazebo>

  </xacro:macro>

</robot>
